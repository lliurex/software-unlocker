profile unsecuredpkcon {
  include <abstractions/base>
  capability dac_read_search,
  capability sys_nice,
  network,
  dbus,
  /{,**/}/* rwm,
  /dev/console rw,
  /dev/pts/* wr,
  /dev/tty rw,
  /proc/@{pid}/{,**}/* mr,
  /proc/cgroups mr,
  /proc/cmdline mr,
  /proc/sys/kernel/seccomp/actions_avail r,
  /proc/sys/kernel/random/boot_id r,
  /run/dbus/system_bus_socket rw,
  /tmp/* wr,
  /usr/bin/apt-config px -> unsecuredpkg,
  /usr/bin/dpkg px -> unsecuredpkg,
  /usr/sbin/dpkg-preconfigure px -> unsecuredpkg,
  /usr/bin/pkcon mixr,
  /usr/bin/pkttyagent mixr,
  /var/cache/fontconfig/{,**/}* rwmlkcix,
}
