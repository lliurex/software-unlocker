/usr/bin/plasma-discover flags=(attach_disconnected) {
  include <abstractions/base>
  capability dac_read_search,
  capability sys_resource,
  capability setgid,
  capability audit_write,
  capability chown,
  capability fowner,
  capability dac_override,
  capability kill,
  capability setuid,
  capability fsetid,
  capability sys_nice,
  capability sys_ptrace,
  ptrace peer=unconfined,
  ptrace peer=/usr/sbin/cups-browsed,
  ptrace peer=snap.cups.cups-browsed,
  ptrace peer=snap.cups.cupsd,
  network,
  dbus,
  /dev/tty rw,
  /dev/pts/* wr,
  /dev/ptmx wr,
  /etc/{,**/}* mr,
  /proc/sys/kernel/core_pattern r,
  /run/user/**/bus rw,
  /run/nscd/socket wr,
  /run/snapd.socket wr,
  /run/nslcd/socket wr,
  /run/dbus/system_bus_socket wr,
  /run/systemd/resolve/stub-resolv.conf r,
  /usr/bin/plasma-discover ix,
  /usr/{,local/}share/{,**/}* r,
  @{HOME}/{,**/}* rwkix,
  @{HOME}/.Xauthority r,
}
